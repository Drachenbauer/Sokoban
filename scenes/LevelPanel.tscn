script/source = "extends Control

# Declare member variables here. Examples:
onready var level_button = $Panel/Panel2/DropDownButton

var selected_level = G.level


# Called when the node enters the scene tree for the first time.
func _ready():
	level_button.add_separator()
	var j = 0
	
	for i in range(G.MAPS.size()):
		j = i + 1
		level_button.add_item(\"Level %s\" % j)
		
		if j > G.highest_reached_level:
			level_button.set_item_disabled(true)
	
	level_button.select(G.level)


func _on_DropDownButton_item_selected(idx):
	selected_level = idx


func _on_ButtonOK_pressed():
	G.level = selected_level
	visible = false
	get_parent().load_level()


func _on_ButtonCancel_pressed():
	selected_level = G.level
	get_tree().paused = false
	visible = false
"

